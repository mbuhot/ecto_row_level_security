<h2>Show message</h2>

<ul>

  <li>
    <strong>From:</strong>
    <%= @message.from %>
  </li>

  <li>
    <strong>To:</strong>
    <%= @message.to %>
  </li>

  <li>
    <strong>Subject:</strong>
    <%= @message.subject %>
  </li>

  <li>
    <strong>Body:</strong>
    <%= @message.body %>
  </li>

</ul>

<%= link "Edit", to: message_path(@conn, :edit, @message) %>
<%= link "Back", to: message_path(@conn, :index) %>
